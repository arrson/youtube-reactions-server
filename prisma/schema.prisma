// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id
  name        String?
  videos      Video[]
}

model Video {
  id            String       @id
  title         String
  thumbnail     String
  publishedAt   DateTime 
  reactions     Reaction[]  @relation("Reactions")
  reaction_to   Reaction?   @relation("ReactionTo")
  creator_id    String
  creator       User        @relation(fields: [creator_id], references: [id])
}

// 1-to-many, a reaction is only to a single video
model Reaction {
  reaction_id     String     @id @unique
  video_id        String
  reaction        Video      @relation("ReactionTo", fields: [reaction_id], references: [id])
  reactionTo      Video      @relation("Reactions", fields: [video_id], references: [id])
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @default(now())
}
