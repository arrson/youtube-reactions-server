{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug E2E Jest Tests",
      "type": "node",
      "request": "launch",
      "osx": {
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceRoot}/node_modules/.bin/jest",
          "--runInBand",
          "--config",
          "./test/jest-e2e.json"
        ]
      },
      "windows": {
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceRoot}/node_modules/jest/bin/jest.js",
          "--runInBand",
          "--config",
          "./test/jest-e2e.json"
        ]
      },

      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
